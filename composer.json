{
  "name": "izumi-kun/yii2-longpoll",
  "description": "Implements long polling connection",
  "type": "yii2-extension",
  "keywords": ["yii2", "extension", "longpoll", "longpolling", "comet", "server"],
  "license": "BSD-3-Clause",
  "scripts": {
    "test": [
      "@putenv XDEBUG_MODE=coverage",
      "Composer\\Config::disableProcessTimeout",
      "phpunit --coverage-html cover"
    ],
    "lint": [
      "Composer\\Config::disableProcessTimeout",
      "phpcs"
    ]
  },
  "authors": [
    {
      "name": "Viktor Khokhryakov",
      "email": "viktor.khokhryakov@gmail.com"
    }
  ],
  "require": {
    "php": "^8.1",
    "yiisoft/yii2": "~2.0.52",
    "npm-asset/jquery-longpoll-client": "0.3.0",
    "ext-ctype": "*"
  },
  "require-dev": {
    "symfony/process": "*",
    "yiisoft/yii2-httpclient": "^2.0",
    "phpunit/phpunit": "^12.0",
    "squizlabs/php_codesniffer": "^3.11",
    "ext-curl": "*"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://asset-packagist.org"
    }
  ],
  "autoload": {
    "psr-4": {
      "izumi\\longpoll\\": "src"
    }
  },
  "config": {
    "allow-plugins": {
      "yiisoft/yii2-composer": true
    }
  }
}
